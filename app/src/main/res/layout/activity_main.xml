<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.liuwen.jian_shu.tab.BottomTabBar
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:backgroundColor="@color/white"
        app:textColor="@color/text_color_66"
        app:textSelectColor="@android:color/holo_red_light">

    </com.example.liuwen.jian_shu.tab.BottomTabBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/tab_post_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="onClickPublish"
            android:src="@mipmap/icon_tabbar_write" />
    </LinearLayout>
</RelativeLayout>